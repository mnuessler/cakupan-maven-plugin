			<parameters>
				<parameter>
					<name>report.outputDirectory</name>
					<property>report.outputDirectory</property>
					<required>true</required>
					<defaultValue>${project.build.directory}/cakupan-report</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory where to put the instrumentation file.
					</description>
				</parameter>
			</parameters>
