<pluginMetadata>
	<mojos>
		<mojo>
			<goal>instrument</goal>
			<call>instrument</call>
			<phase>process-test-classes</phase>
			<description>
				Instrument XSLT files.
			</description>
			<parameters>
				<parameter>
					<name>instrument.outputDirectory</name>
					<property>instrument.outputDirectory</property>
					<required>true</required>
					<defaultValue>${project.build.directory}/cakupan-report</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory where to place the instrumentation file.
					</description>
				</parameter>
				<parameter>
					<name>xsl.sourceDirectory</name>
					<property>xsl.sourceDirectory</property>
					<required>true</required>
					<defaultValue>${project.basedir}/src/main/resources</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory that contains the XSL source files.
					</description>
				</parameter>
				<parameter>
					<name>xsl.includes</name>
					<property>xsl.includes</property>
					<required>true</required>
					<defaultValue>**/*.xsl</defaultValue>
					<type>java.lang.String</type>
					<description>
						The includes file pattern.
					</description>
				</parameter>
			</parameters>
		</mojo>
		<mojo>
			<goal>test</goal>
			<call>test</call>
			<phase>test</phase>
			<description>
				Run tests.
			</description>
			<parameters>
				<parameter>
					<name>instrument.outputDirectory</name>
					<property>instrument.outputDirectory</property>
					<required>true</required>
					<defaultValue>${project.build.directory}/cakupan-report</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory where to put the instrumentation file.
					</description>
				</parameter>
				<parameter>
					<name>testResultDirectory</name>
					<property>testResultDirectory</property>
					<required>true</required>
					<defaultValue>${project.build.directory}/cakupan-test</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory where to find the test classes.
					</description>
				</parameter>
				<parameter>
					<name>testSourceDirectory</name>
					<property>testSourceDirectory</property>
					<required>true</required>
					<defaultValue>${project.build.testSourceDirectory}</defaultValue>
					<type>java.lang.String</type>
					<description>
						The directory where to find the test classes.
					</description>
				</parameter>
				<parameter>
					<name>test.includes</name>
					<property>test.includes</property>
					<required>true</required>
