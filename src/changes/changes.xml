<document xmlns="http://maven.apache.org/changes/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/xsd/changes-1.0.0.xsd">
	<properties>
		<title>Cakupan Maven Plugin</title>
	</properties>
	<body>
	
		<release version="0.5" date="2012-05-15" description="Bugfix release">
			<action dev="mnuessler" type="fix" issue="14">
				Site upload fails because of files with zero size.
			</action>
		</release>
	
		<release version="0.4" date="2011-11-01" description="Release 0.4">
			<action dev="mnuessler" type="add" issue="3">
				Maven 3 compatibility.
			</action>
		</release>

		<release version="0.3" date="2011-11-01" description="Release 0.3">
			<action dev="mnuessler" type="add" issue="4">
				Upgrade to Cakupan 1.5.
			</action>
		</release>
		
		<release version="0.2" date="2011-09-24" description="Release 0.2">
			<action dev="mnuessler" type="fix" issue="2">
				Link from site navigation to report broken.
			</action>
			<action dev="mnuessler" type="add" issue="9">
				Provide 'test' parameter to run a single test.
			</action>
			<action dev="mnuessler" type="add" issue="10">
				Provide parameter to ignore test failures.
			</action>
		</release>

		<release version="0.1" date="2011-09-18" description="First release" />
		
	</body>
