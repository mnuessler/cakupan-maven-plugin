# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{java,groovy}]
indent_style = space
indent_size = 4

[*.{xml,xsl}]
indent_style = space
indent_size = 4

[*.{sh,fml}]
indent_style = tab

[*.yml]
indent_style = space
indent_size = 2
